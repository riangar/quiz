
<form method="get" action="quizes">
	<input type="text" name="search" value="B&uacute;squeda de preguntas" />
	<input type="submit" value="Enviar" />
</form>
<table>
<% var i; for (i=0; i < quizes.length; i++) { %>
	<tr><td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a> (<%= quizes[i].tema %>)</td>
		<td><a href="/quizes/<%= quizes[i].id %>/edit"><button type="button">editar</button></a></td>
		<td>
			<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
				<button type="submit" onclick="return confirm('Borrar <%= quizes[i].pregunta %>')">
				borrar
				</button>
			</form>
		</td>
	</tr>
<% } %>
</table>
<a href="/quizes/new"><button type="button"/>Crear pregunta</button></a>